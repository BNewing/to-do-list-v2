@media (min-width: 816px)
	body
		margin: 25px
		background-color: #FFFCCC
		font-family: tahoma

	h2, h4
		color: #412234
		letter-spacing: 1.5px
		line-height: 1.5
		border-bottom: solid 1px #BF5FFF

	h5
		color: #412234
		letter-spacing: 1.5px
		line-height: 1
		text-transform: uppercase
		border-bottom: solid 1px #BF5FFF

	p
		color: #555555
		letter-spacing: 0.25px
		line-height: 1.5


