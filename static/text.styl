@media (min-width: 816px)
	body
		margin: 25px
		background-color: #FFFCCC


	h2, h4
		font-family: tahoma
		color: #412234
		letter-spacing: 1.5px
		line-height: 1.5
		border-bottom: solid 1px #BF5FFF

	h5
		font-family: tahoma
		color: #412234
		letter-spacing: 1.5px
		line-height: 1
		text-transform: uppercase
		border-bottom: solid 1px #BF5FFF


	p
		font-family: tahoma
		color: #555555
		letter-spacing: 0.25px
		line-height: 1.5


	div.topthird
		float: left
		width: 27.5%
		margin: 1.6%
		padding: 1%
		border: dotted 1px
		border-radius:25px
		padding-bottom: 1%
		background-color: #EAD7D7

	div.links
		float: left
		width: 45%
		border-radius: 25px
		border: solid 1px #000000
		background-color: #FF92BB
		padding: 1%
		margin: 1%

	div.homepageLinks
		float: center
		width: 95%
		border-radius: 25px
		border: solid 1px #000000
		background-color: #F92BB
		padding: 1%
		margin: 1%



