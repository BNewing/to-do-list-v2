@media (min-width: 816px)
	ul
		padding-left:0
		font-family: tahoma


	li
		font-family: tahoma
		color: #555555
		letter-spacing: 0.25px
		line-height: 1.5
		background-color: #B49FBB
		border-radius: 5px
		border: solid 1px #000000
		height: auto
		list-style-type: none
		padding-left: 20px
		padding-top: 10px
		padding-bottom: 10px
		padding-right: 20px
		position: relative
		overflow: auto
		margin: 20px


	button
		float: right
		margin: 5px
	  top: 2px
	  right: 2px


	label
		float: right
		background: #ffd27f
		border-radius: 5px
		border: solid 1px #000000
	  top: 5px
	  right: 35px
	  padding: 2px
	  z-index: 1




